<main class="pa4 black-80">
<%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "measure center") do |f| %>
  <%= devise_error_messages! %>

  <fieldset id="sign_in" class="ba b--transparent ph0 mh0">
    <legend class="f4 fw6 ph0 mh0">Sign Up</legend>
    <div class="mt3">
      <%= f.label :email, class: "db fw6 lh-copy f6" %>
      <%= f.email_field :email, class: "pa2 input-reset ba bg-transparent hover-bg-black hover-white w-100" %>
    </div>
    <div class="mv3">
      <%= f.label :password, class: "db fw6 lh-copy f6" %>
      <%= f.password_field :password, class: "b pa2 input-reset ba bg-transparent hover-bg-black hover-white w-100" %>
    </div>
    <div class="field">
      <%= f.label :remember_me, class: "pa0 ma0 lh-copy f6 pointer" do %>
        <%= f.check_box :remember_me %>
        <span>Remember me</span>
      <% end %>
    </div>
  </fieldset>
  <div class="">
    <%= f.submit "Sign in", class: "b ph3 pv2 input-reset ba b--black bg-transparent grow pointer f6 dib" %>
  </div>
  <div class="lh-copy mt3">
    <%= render "devise/shared/links" %>
  </div>
<% end %>
</main>
